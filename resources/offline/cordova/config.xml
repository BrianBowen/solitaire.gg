<?xml version='1.0' encoding='utf-8'?>
<widget id="gg.solitaire" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Solitaire.gg</name>
  <description>Solitaire.gg</description>
  <author email="dev@solitaire.gg" href="https://solitaire.gg">The Solitaire.gg Team</author>
  <content src="index.html"/>

  <!-- Display Preferences -->
  <preference name="Orientation" value="default" />
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackgroundColor" value="0xff000000"/>
  <preference name="PaginationMode" value="unpaginated"/>
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarBackgroundColor" value="#000000" />
  <preference name="StatusBarStyle" value="blackopaque" />

  <!-- Whitelist -->
  <access origin="*://solitaire.gg/*" />

  <!-- External URLs -->
  <allow-intent href="http://solitaire.gg/*"/>
  <allow-intent href="https://solitaire.gg/*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>

  <!-- Icons -->
  <platform name="amazon-fireos">
    <icon src="res/android/icon-ldpi.png" density="ldpi" />
    <icon src="res/android/icon-mdpi.png" density="mdpi" />
    <icon src="res/android/icon-hdpi.png" density="hdpi" />
    <icon src="res/android/icon-xhdpi.png" density="xhdpi" />
    <icon src="res/android/icon-xxhdpi.png" density="xxhdpi" />
    <icon src="res/android/icon-xxxhdpi.png" density="xxxhdpi" />
  </platform>

  <platform name="android">
    <icon src="res/android/icon-ldpi.png" density="ldpi" />
    <icon src="res/android/icon-mdpi.png" density="mdpi" />
    <icon src="res/android/icon-hdpi.png" density="hdpi" />
    <icon src="res/android/icon-xhdpi.png" density="xhdpi" />
    <icon src="res/android/icon-xxhdpi.png" density="xxhdpi" />
    <icon src="res/android/icon-xxxhdpi.png" density="xxxhdpi" />
  </platform>

  <platform name="firefoxos">
    <icon src="res/firefoxos/logo.png" width="60" height="60" />
  </platform>

  <platform name="ios">
    <icon src="res/ios/icon-60.png" width="60" height="60" />
    <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
    <icon src="res/ios/icon-60@3x.png" width="180" height="180" />
    <icon src="res/ios/icon-76.png" width="76" height="76" />
    <icon src="res/ios/icon-76@2x.png" width="152" height="152" />
    <icon src="res/ios/icon-40.png" width="40" height="40" />
    <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
    <icon src="res/ios/icon.png" width="57" height="57" />
    <icon src="res/ios/icon@2x.png" width="114" height="114" />
    <icon src="res/ios/icon-72.png" width="72" height="72" />
    <icon src="res/ios/icon-72@2x.png" width="144" height="144" />
    <icon src="res/ios/icon-small.png" width="29" height="29" />
    <icon src="res/ios/icon-small@2x.png" width="58" height="58" />
    <icon src="res/ios/icon-50.png" width="50" height="50" />
    <icon src="res/ios/icon-50@2x.png" width="100" height="100" />
  </platform>

  <!-- Splash Screens -->
  <platform name="android">
    <splash src="res/android/splash-landscape-ldpi.png" density="land-ldpi"/>
    <splash src="res/android/splash-landscape-mdpi.png" density="land-mdpi"/>
    <splash src="res/android/splash-landscape-hdpi.png" density="land-hdpi"/>
    <splash src="res/android/splash-landscape-xhdpi.png" density="land-xhdpi"/>
    <splash src="res/android/splash-landscape-xxhdpi.png" density="land-xxhdpi"/>
    <splash src="res/android/splash-landscape-xxxhdpi.png" density="land-xxxhdpi"/>

    <splash src="res/android/splash-portrait-ldpi.png" density="port-ldpi"/>
    <splash src="res/android/splash-portrait-mdpi.png" density="port-mdpi"/>
    <splash src="res/android/splash-portrait-hdpi.png" density="port-hdpi"/>
    <splash src="res/android/splash-portrait-xhdpi.png" density="port-xhdpi"/>
    <splash src="res/android/splash-portrait-xxhdpi.png" density="port-xxhdpi"/>
    <splash src="res/android/splash-portrait-xxxhdpi.png" density="port-xxxhdpi"/>
  </platform>

  <platform name="ios">
    <splash src="res/ios/splash-iphone.png" width="320" height="480"/>
    <splash src="res/ios/splash-iphone@2x.png" width="640" height="960"/>
    <splash src="res/ios/splash-ipad-portrait.png" width="768" height="1024"/>
    <splash src="res/ios/splash-ipad-portrait@2x.png" width="1536" height="2048"/>
    <splash src="res/ios/splash-ipad-landscape.png" width="1024" height="768"/>
    <splash src="res/ios/splash-ipad-landscape@2x.png" width="2048" height="1536"/>
    <splash src="res/ios/splash-iphone5.png" width="640" height="1136"/>
    <splash src="res/ios/splash-iphone6.png" width="750" height="1334"/>
    <splash src="res/ios/splash-iphone6-plus-portrait.png" width="1242" height="2208"/>
    <splash src="res/ios/splash-iphone6-plus-landscape.png" width="2208" height="1242"/>
  </platform>

  <engine name="android" spec="^6.2.3" />
  <engine name="browser" spec="^4.1.0" />
  <engine name="ios" spec="^4.4.0" />
  <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
