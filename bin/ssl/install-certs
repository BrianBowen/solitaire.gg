#!/bin/sh
cp /etc/letsencrypt/live/solitaire.gg/* ~/ssl/certs

cd certs

openssl pkcs12 -export -out cert_and_key.p12 -name solitaire -inkey privkey.pem -in cert.pem -CAfile chain.pem -caname root

keytool -importkeystore -deststorepass "omgWTFdragonz!" -destkeypass "omgWTFdragonz!" -destkeystore solitaire.jks -srckeystore cert_and_key.p12 -srcstoretype PKCS12 -srcstorepass "omgWTFdragonz!" -alias solitaire

keytool -import -trustcacerts -alias root -file chain.pem -keystore solitaire.jks
